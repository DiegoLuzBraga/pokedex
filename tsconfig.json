{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "target": "es6",
    "module": "esnext",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "noImplicitThis": true,
    "strict": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "esnext"],
    "types": ["react", "jest", "node"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "__tests__"]
}
